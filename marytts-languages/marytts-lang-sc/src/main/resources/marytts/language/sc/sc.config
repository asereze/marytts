##########################################################################
# MARY TTS configuration file.
##########################################################################

name = sc
sc.version = 5.2

locale = sc


###########################################################################
############################## The Modules  ###############################
###########################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.


# Java classes to use as the modules, as a whitespace-separated list.
# These have to implement marytts.modules.MaryModule.
# For each input type + output type, only one Module may be listed
# across all components, or an Exception will be thrown.
# No particular order is required -- a processing pipeline from input data type
# to output data type will be computed on-line.

modules.classes.list = \
        marytts.language.sc.JTokeniser \
        marytts.language.sc.Preprocess \
        marytts.language.sc.JPhonemiser  \
        marytts.modules.MinimalisticPosTagger(sc,sc.) \
        marytts.language.sc.Postlex \
        marytts.language.sc.Prosody \

        marytts.modules.CARTDurationModeller(sc,sc.duration.,marytts.features.FeatureProcessorManager(sc)) \
        marytts.modules.CARTF0Modeller(sc,sc.f0.,marytts.features.FeatureProcessorManager(sc)) \




####################################################################
####################### Module settings  ###########################
####################################################################

# Phonemiser settings
sc.allophoneset = jar:/marytts/language/sc/lexicon/allophones.sc.xml
sc.lexicon = jar:/marytts/language/sc/lexicon/sc_lexicon.fst
sc.lettertosound = jar:/marytts/language/sc/lexicon/sc.lts
#sc.userdict = MARY_BASE/user-dictionaries/userdict-sc.txt

# POS tagger settings
sc.partsofspeech.fst = jar:/marytts/language/sc/tagger/sc_pos.fst
sc.partsofspeech.punctuation = ,.?!;:"/\\()[]{}^'_

sc.pos.model = jar:/marytts/language/sc/tagger/sc-pos.bin
sc.pos.deterministic_symbols_tagdict = jar:/marytts/language/sc/tagger/deterministic_tagdict
sc.pos.deterministic_symbols_tagdict.isCaseSensitive = true

# Global prosody trees:
sc.duration.cart = MARY_BASE/lib/modules/sc/cap/dur.graph.mry

# Whether to apply paragraph declination intonation:
sc.prosody.paragraphdeclination = true
# rules for prediction of ToBI tones
sc.prosody.tobipredparams = jar:/marytts/language/sc/prosody/tobipredparams_sardinian.xml
# rules for accent priorities of pos
sc.prosody.accentPriorities = jar:/marytts/language/sc/prosody/POSAccentPriorities.properties
# copy the word accents to the first accented syllable
sc.prosody.syllableaccents = true

sc.f0.cart.left = MARY_BASE/lib/modules/sc/cap/f0.left.tree
sc.f0.cart.mid = MARY_BASE/lib/modules/sc/cap/f0.mid.tree
sc.f0.cart.right = MARY_BASE/lib/modules/sc/cap/f0.right.tree
sc.f0.featuredefinition = MARY_BASE/lib/modules/sc/cap/phoneUnitFeatureDefinition.txt

# Feature processor manager
featuremanager.classes.list = \
	marytts.features.FeatureProcessorManager(sc)